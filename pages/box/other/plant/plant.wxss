}

.cameras {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 150rpx;
}

.kuang {
  width: 500rpx;
  height: 500rpx;
  border: 5px solid #b0b8ac;
}

.img {
  width: 100%;
  height: 75%;
}

.tar {
  width: 100%;
  height: 25%;
}

.tar-text {
  margin-top: 5px;
  text-align: center;
