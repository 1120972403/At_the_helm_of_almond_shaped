/* pages/component/nav/nav.wxss */

.raduis{
  border-radius: 10px;
}
.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}
.fixeds{
  display: fixed;
  
}
.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
}
.VerticalMain{
  background-color: #f1f1f1;
}




/* 右侧信息 */
.m-list .m-list-bd {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 40rpx;
}

.m-list .item {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
    margin-left: 22rpx;
    width: 140rpx;
    height: 200rpx;
    border-radius: 8rpx;
    background-color: #BF9144;
}

.m-list .item:active {
    opacity: .5;
}

.m-list .item .bg {
    width: 140rpx;
    height: 200rpx;
}

.m-list .item-bd {
    flex: 1;
}


.m-list .item-ft .txt {
    display: block;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 32rpx;
    color: #FFF;
}

.m-list .item .tag {
    position: absolute;
    top: 0;
    left: 0;
    width: 82rpx;
    height: 82rpx;
}

.m-list .text {
    text-align: center;
    font-size: 32rpx;
    color: #FFF;
}